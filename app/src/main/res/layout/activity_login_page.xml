<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="40dp"
    tools:context=".LoginPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/log_in"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_continue_with_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/continue_with_email"
        android:textFontWeight="@integer/material_motion_duration_long_1"

        android:background="@drawable/login_continue_with_email"
        />

    <Button
        android:id="@+id/btn_continue_with_google"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/continue_with_google"
        android:textFontWeight="@integer/material_motion_duration_long_1"

        android:background="@drawable/login_continue_with_email"
        />
    <Button
        android:id="@+id/btn_continue_with_facebook"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/continue_with_facebook"
        android:textFontWeight="@integer/material_motion_duration_long_1"

        android:background="@drawable/login_continue_with_email"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/by_tapping_continue_iwith_facebook_google_you_agree_to_communitycircuit_s_terms_and_conditions"
        android:textSize="14sp"
        android:textFontWeight="@integer/material_motion_duration_long_1"

        android:textColor="#686767"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="@string/don_t_have_an_account"
        android:paddingStart="60dp"
        android:textSize="17sp"
        android:textFontWeight="@integer/material_motion_duration_long_1"

        android:textColor="#686767"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sign_up"
        android:textFontWeight="@integer/material_motion_duration_long_1"

        android:paddingStart="120dp"
        android:textSize="17sp"
        android:textColor="#686767"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />




</LinearLayout>