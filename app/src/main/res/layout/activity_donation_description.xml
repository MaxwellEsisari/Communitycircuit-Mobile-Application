<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DonationDescription"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageV"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="remainingDays"
            android:textSize="25sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="text"
        android:layout_marginHorizontal="20dp"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#E1DDDD"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner">

        <!-- Progress View -->
        <ProgressBar
            android:id="@+id/progressBarContribution0001"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:max="100"
            android:progress="50" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/campa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50% Funded"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="30dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E1DDDD"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner">

        <!-- Progress View -->


        <!-- Progress Text -->

        <TextView
            android:id="@+id/textBeneficiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beneficiary"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/campaigner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/beneficiary"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            app:drawableLeftCompat="@drawable/baseline_emoji_people_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About The Campaign"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E1DDDD"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner">


        <TextView
            android:id="@+id/campaignAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:backgroundTint="#2196F3"
        android:background="@drawable/login_continue_with_email"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/donate"
        android:textSize="16sp"/>


    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlayColor"
        android:visibility="invisible" />




</LinearLayout>

    </ScrollView>