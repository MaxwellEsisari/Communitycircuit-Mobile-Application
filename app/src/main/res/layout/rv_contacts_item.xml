<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Horizontal ScrollView -->

            <!-- CardView item -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textBeneficiary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:drawableLeft="@drawable/baseline_emoji_people_24"
                        android:text="textBeneficiary"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/textCampaignAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="20dp"
                        android:text="textAbout"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:textStyle="normal"
                        />

                    <!-- Image Holder -->
                    <ImageView
                        android:id="@+id/imgItem"
                        android:layout_width="320dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/comcirc" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textViewCampaignTitle00001"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="name"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="16dp" />
                        <View
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />


                        <TextView
                            android:id="@+id/textViewRemainingDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="campaignDuration"
                            android:drawablePadding="4dp"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/black"
                            android:paddingStart="8dp" />




                    </LinearLayout>




                    <TextView
                        android:id="@+id/tvIdItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="id"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"
                        android:visibility="invisible"/>

                    <!-- Progress View -->
                    <ProgressBar
                        android:id="@+id/progressBarContribution0001"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="50" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Progress Text -->
                        <TextView
                            android:id="@+id/textBeneficiaryTotal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Total Amount Paid: "
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp" />

                        <!-- Button -->
                        <Button
                            android:id="@+id/shareMeal"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="0dp"
                            android:backgroundTint="@color/purple_700"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:text="@string/donate" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add more CardView items here if needed -->


</LinearLayout>
